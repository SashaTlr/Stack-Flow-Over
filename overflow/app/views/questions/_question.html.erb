<li>
  <span>
    <%= link_to "<span> &uarr; </span>".html_safe, new_question_vote_path(question.id, vote_type: 1)%> <%= question.vote_score %>
      <%= link_to "<span> &darr; </span>".html_safe, new_question_vote_path(question.id, vote_type: -1) %>
  </span>
  <%=link_to question.body, question_path(question) %>
    <div class="show-username">
    - <%=question.user.name%>, <%=std_date_format(question.created_at)%>
    </div>
  <div id="edit-q-index">
    <% if current_user == question.user %>
     <%=link_to "Edit", edit_question_path(question)%>
    <% end %>
</div>
</li>
